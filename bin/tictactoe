#!/usr/bin/env ruby

require_relative '../config/environment'

puts "Welcome to Tic Tac Toe!"
game = Game.new
game.play

if game.over?
  play_again?
end

def play_again?
  play_again = ""
  until play_again == "n"
    puts "Would you like to play again? (y/n)"
      play_again = gets.strip
    if play_again == "y"
      game = Game.new
      game.play
    elsif play_again == "n"
      puts "Bye Felicia!"
    end
  end
end
